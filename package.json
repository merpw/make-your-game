{
  "scripts": {
    "build": "tsc",
    "dev": "tsc -w",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "prettier": "2.8.3",
    "typescript": "^4.9.5"
  },
  "eslintConfig": {
    "env": {
      "browser": true
    },
    "ignorePatterns": "*.js",
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "eslint-plugin-tsdoc"
    ],
    "root": true,
    "rules": {
      "tsdoc/syntax": "warn"
    }
  },
  "prettier": {
    "semi": false
  }
}
